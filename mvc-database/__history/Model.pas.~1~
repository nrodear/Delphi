unit Model;

interface

type
  TPerson = class
  private
    FName: string;
    FVorname: string;
    FWohnort: string;
  public
    property Name: string read FName write FName;
    property Vorname: string read FVorname write FVorname;
    property Wohnort: string read FWohnort write FWohnort;
    constructor Create(const AVorname, AName, AWohnort: string);
  end;

implementation

constructor TPerson.Create(const AVorname, AName, AWohnort: string);
begin
  FVorname := AVorname;
  FName := AName;
  FWohnort := AWohnort;
end;

end.

